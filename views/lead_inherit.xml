<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="crm_lead_new_client">
        <field name="name">crm.lead.new.client</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expected_revenue']" position="attributes">
                <attribute name="string">PNB espéré</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="convert_dossier" string="Lancer le dossier" type="object" class="oe_highlight"
                        invisible="type != 'opportunity'"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Chargé d'Affaire</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Chargé d'Affaire</attribute>
            </xpath>
            <xpath expr="//page[@name='extra']" position="attributes">
                <attribute name="string">Infos Globales</attribute>
            </xpath>
            <xpath expr="//button[@name='%(crm.crm_lead_lost_action)d']" position="attributes">
                <attribute name="string">Rejeter</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_crv" type="object" class="oe_stat_button" string="Renseigner le CRV"/>
            </xpath>
            <xpath expr="//page[@name='lead']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='extra']" position="inside">
                <group>
                    <group>
                        <field name="date_creation"/>
                        <field name="nrc"/>
                        <field name="nif"/>
                        <field name="nis"/>
                        <field name="rib"/>
                    </group>
                    <group>
                        <field name="branch"/>
                        <field name="num_compte"/>
                        <field name="secteur"/>
                        <field name="activity"/>
                        <field name="demande_type"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='extra']" position="after">
                <page name="documents" string="Documents">
                    <field name="document_ids">
                        <tree create="0" delete="0" editable="bottom">
                            <field name="name"/>
                            <field name="datas" widget="file"/>
                        </tree>
                    </field>
                </page>
                <page name="confreres" string="Engagaments auprès des confrères">
                    <field name="confrere_ids">
                        <tree  editable="bottom">
                            <field name="banque"/>
                            <field name="credit"/>
                            <field name="montant"/>
                            <field name="condition"/>
                            <field name="date_echeance"/>
                            <field name="garantie"/>
                        </tree>
                    </field>
                </page>
                <page name="importation" string="Planning d'importation">
                    <field name="importation_ids">
                        <tree  editable="bottom">
                            <field name="fournisseur"/>
                            <field name="pays"/>
                            <field name="payment"/>
                            <field name="delai"/>
                            <field name="montant"/>
                            <field name="programme_importation"/>
                            <field name="delai_livraison"/>
                        </tree>
                    </field>
                </page>
                <page name="appro" string="Plan d`Appro. Local">
                    <field name="appro_ids">
                        <tree  editable="bottom">
                            <field name="marchandise"/>
                            <field name="fournisseur"/>
                            <field name="payment"/>
                            <field name="delai"/>
                            <field name="montant"/>
                            <field name="programme_importation"/>
                        </tree>
                    </field>
                </page>
                <page name="plan" string="Plan des charges">
                    <field name="plan_ids">
                        <tree  editable="bottom">
                            <field name="type_marche"/>
                            <field name="client"/>
                            <field name="dom_bancaire"/>
                            <field name="natissement"/>
                            <field name="montant"/>
                            <field name="objet"/>
                            <field name="date_obs"/>
                            <field name="delai"/>
                            <field name="taux"/>
                            <field name="montant_facture"/>
                            <field name="montant_encaisse"/>
                            <field name="montant_fact_no_encaisse"/>
                            <field name="montant_no_fact_realise"/>
                        </tree>
                    </field>
                </page>
                <page name="financement_0" invisible="demande_type == '1'" string="Financement sollicité">
                    <field name="financement_ids">
                        <tree  editable="bottom">
                            <field name="type_fin"/>
                            <field name="montant"/>
                            <field name="utilisation"/>
                        </tree>
                    </field>
                    <group>
                        <field name="garanties"/>
                    </group>
                </page>
                <page name="financement_1" invisible="demande_type == '0'" string="Financement sollicité">
                    <field name="financement_ids">
                        <tree  editable="bottom">
                            <field name="type_fin"/>
                            <field name="autorisation_actuel"/>
                            <field name="validite"/>
                            <field name="new_plafond"/>
                        </tree>
                    </field>
                    <group>
                        <field name="garanties"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="compte_rendu_views_wizard_form" model="ir.ui.view">
        <field name="name">crm.compte.rendu.wizard.form</field>
        <field name="model">crm.compte.rendu</field>
        <field name="arch" type="xml">
            <form string="Compte rendu de visite">
                <sheet>
                    <group>
                            <field name="visit_date"/>
                            <field name="address"/>
                            <field name="participant_ids" widget="many2many_tags"/>
                            <field name="resume"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>